#random number generator
import random
import tkinter as tk
from tkinter import *

window = tk.Tk()
window.title("Random Number Generator")
window.geometry("500x300")

#define the variables, making them global and accessible from the beginning
startNum = None
endNum = None

def getStart():
    global startNum
    startNum = start.get()
    startNum = int(startNum)
    return startNum

def getEnd():
    global endNum
    endNum = end.get()
    endNum = int(endNum)
    return endNum

def randomNum(startNum, endNum):
    #ensures it is using the input values not the initial global values
    if startNum is not None and endNum is not None:
        num = random.randint(startNum, endNum)
        #makes a random selection within the range given
        outputLabel = tk.Label(window, text="The random number generated is: ")
        outputLabel.pack(pady = 10)
        output = tk.Text(window, height = 1, width = 10)
        output.insert(tk.END, num)
        output.pack(pady = 5)

#creates an entry box with a label
#to input the starting number
startLabel = tk.Label(window, text="Enter the lowest number: ")
startLabel.pack()
start = tk.Entry(window)
start.pack()
submitStart = tk.Button(window, height = 1, width = 6, text = "Submit", command = lambda: getStart())
submitStart.pack(pady = 5)

#and to input the ending number
#to pass into the function 'randomNum'
endLabel = tk.Label(window, text="Enter the highest number: ")
endLabel.pack()
end = tk.Entry(window)
end.pack()
submitEnd = tk.Button(window, height = 1, width = 6, text = "Submit", command = lambda: getEnd())
submitEnd.pack(pady = 5)

#button to call the 'randomNum' function to generate the random number
generate = tk.Button(window, height = 1, width = 21, text = "Generate Random Number", command = lambda: randomNum(startNum, endNum))
generate.pack(pady = 5)

window.mainloop()
