#random number generator
import random
import tkinter as tk
from tkinter import *

#nums = []
#start = int(input("Enter the lowest number: "))
#end = int(input("Enter the largest number: "))
##creates a list of possible numbers within the range to choose from
#for i in range(start, end + 1):
#    nums.append(i)

#print("The random number generated is",random.choice(nums))

window = tk.Tk()
window.title("Random Number Generator")
window.geometry("500x300")

def getStart():
    startNum = start.get()
    print(startNum)

def getEnd():
    endNum = end.get()
    print(endNum)

#creates an entry box with a label
#to input the starting number
startLabel = tk.Label(window, text="Enter the lowest number: ")
startLabel.pack()
start = tk.Entry(window)
start.pack()
submitStart = tk.Button(window, height = 1, width = 5, text = "Submit", command = lambda: getStart())
submitStart.pack()

#and to input the ending number
#to pass into the function ---
endLabel = tk.Label(window, text="Enter the highest number: ")
endLabel.pack()
end = tk.Entry(window)
end.pack()
submitEnd = tk.Button(window, height = 1, width = 5, text = "Submit", command = lambda: getEnd())
submitEnd.pack()

window.mainloop()
